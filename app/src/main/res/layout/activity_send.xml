<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@android:color/transparent"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:visibility="gone"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

        </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MyApp.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:animateLayoutChanges="true"
            android:background="@android:color/transparent"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:visibility="visible"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">
            <RelativeLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rlBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:src="@drawable/ic_back"
                        android:visibility="visible"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/rlBack"
                    android:gravity="center"
                    android:text="SEND"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_title"
                />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical"
            android:weightSum="6.0">

            <RelativeLayout
                android:id="@+id/rlAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llButtons"
                android:layout_alignParentTop="true"
            >
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvAmount"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/tvAmount"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:gravity="center_vertical"
                    android:text="AMOUNT"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_large"/>

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:text="12.34 ETH"
                    android:textColor="@color/primary_text"
                    android:textSize="30sp"
                />

                <TextView
                    android:id="@+id/tvAmountUSD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tvAmount"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="= 12.34 USD"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_extra_large"/>


            </RelativeLayout>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_above="@+id/llButtons"
                android:background="@drawable/gradient"/>
            <LinearLayout
                android:id="@+id/llButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:elevation="10dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:weightSum="3">
                    <Button
                        android:id="@+id/bt1"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"/>
                    <Button
                        android:id="@+id/bt2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"
                    />
                    <Button
                        android:id="@+id/bt3"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"
                    />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:weightSum="3">
                    <Button
                        android:id="@+id/bt4"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"
                    />
                    <Button
                        android:id="@+id/bt5"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"
                    />
                    <Button
                        android:id="@+id/bt6"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:weightSum="3">
                    <Button
                        android:id="@+id/bt7"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"
                    />
                    <Button
                        android:id="@+id/bt8"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"
                    />
                    <Button
                        android:id="@+id/bt9"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"
                    />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:weightSum="3">
                    <ImageButton
                        android:id="@+id/ivDelete"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"

                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:src="@drawable/ic_delete"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"
                    />

                    <Button
                        android:id="@+id/bt0"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"
                        android:visibility="visible"
                    />
                    <Button
                        android:id="@+id/btPeriod"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pin_button_size"
                        android:layout_height="@dimen/pin_button_size"
                        android:layout_margin="@dimen/pin_button_margin"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="."
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/pin_button_text_size"
                    />

                </LinearLayout>
                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pin_button_margin"
                    android:src="@drawable/ic_next"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>