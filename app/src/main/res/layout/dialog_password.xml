<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:orientation="horizontal">

        <!-- Stop auto focussing the EditText -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true">
        </LinearLayout>

        <EditText
            android:id="@+id/etAccessPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="6"
            android:gravity="center"
            android:inputType="text"
            android:maxLength="10"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_medium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"
            />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"
            />
            <TextView
                android:id="@+id/tv5"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"
            />
            <TextView
                android:id="@+id/tv6"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv7"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"
            />
            <TextView
                android:id="@+id/tv8"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"
            />
            <TextView
                android:id="@+id/tv9"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="3">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:inputType="text"
                android:padding="@dimen/activity_margin_small"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"
            />

            <TextView
                android:id="@+id/tv0"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"
                android:visibility="visible"
            />
            <TextView
                android:id="@+id/tvPeriod"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="."
                android:textColor="@color/primary_text"
                android:textSize="@dimen/pin_button_text_size"
            />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/ivNext"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/pin_button_margin"
                android:src="@drawable/ic_next"
            />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>